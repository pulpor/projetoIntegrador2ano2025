    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "undici": "^7.12.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "nodemon": "^3.1.10"
  }
}
