{
  "name": "projeto-integrador-rpg",
  "version": "1.0.0",
  "description": "Sistema RPG de Aprendizado",
  "main": "server/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
